{
  "name": "rest-boilerplate-ts",
  "version": "1.0.0",
  "description": "Template to build rest api",
  "main": "app/index.ts",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "dev": "nodemon -e ts --watch app --exec 'ts-node' -r tsconfig-paths/register app | pino-pretty -c -l -t",
    "lint": "eslint . --ext .ts",
    "build": "ttsc -p .",
    "start": "node dist/app",
    "prepare": "husky install && npx husky add .husky/pre-commit 'npx lint-staged'"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint -- --cache",
      "npm run test -- --bail --passWithNoTests --findRelatedTests"
    ]
  },
  "author": "Fernando Ochoa <fochoa@clmdigitalsolutions.com>",
  "license": "MIT",
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^3.0.0",
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.2",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^15.0.2",
    "@types/pino": "^6.3.8",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.22.1",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^7.0.0",
    "jest": "^26.6.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.3.0",
    "pre-commit": "^1.2.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@azure/service-bus": "^7.0.0",
    "@google-cloud/pubsub": "^2.7.0",
    "@google-cloud/secret-manager": "^3.2.3",
    "dotenv": "^8.2.0",
    "joi": "^17.2.1",
    "kafkajs": "^1.15.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^9.4.0",
    "mongodb": "^3.6.2",
    "pino": "^6.7.0",
    "uuid": "^8.3.2",
    "xss": "^1.0.8"
  }
}
